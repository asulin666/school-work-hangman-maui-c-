<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp8.MainPage"
             Title="Hangman Game"
             BackgroundColor="#F0F8FF">

    <ScrollView>
        <Grid Padding="20" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*">

            <!-- Image -->
            <Image Source="hangman1.png" 
        Grid.Row="1" 
        HeightRequest="250" 
        HorizontalOptions="Center" 
        Margin="0,20"/>
            <Image Source="{Binding HangmanImage}" 
                   Grid.Row="1" 
                   HeightRequest="250" 
                   HorizontalOptions="Center" 
                   Margin="0,20"/>

            <!-- Word Display -->
            <Label Text="{Binding DisplayWord}" 
                   Grid.Row="2"
                   FontSize="32"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="#333"
                   Margin="0,20"/>

            <!-- Name Entry -->
            <Frame CornerRadius="25" Padding="15" WidthRequest="280" HeightRequest="70" BackgroundColor="#FFFFFF" HasShadow="True">
                <Entry x:Name="NameEntry" 
                       Placeholder="Enter Name" 
                       FontSize="18" 
                       TextColor="#333" 
                       BackgroundColor="Grey"
                       VerticalTextAlignment="Center"/>
            </Frame>

            <!-- Login Button -->
            <Button x:Name="Login" 
                    TranslationX="85" 
                    Text="Login" 
                    Clicked="OnCheckScoreClicked" 
                    WidthRequest="140" 
                    HeightRequest="60"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="30"
                    Margin="0,20"/>

            <Label x:Name="ScoreLabel" 
                   FontSize="20" 
                   TranslationY="-20"
                   TextColor="Black" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>

            <!-- Letter Buttons in FlexLayout -->
            <ScrollView Grid.Row="3" Margin="0,20">
                <FlexLayout Wrap="Wrap" JustifyContent="Center" AlignItems="Center" Margin="10">
                    <!-- Styled Letter Buttons -->
                    <Button x:Name="ButtonA" Text="A" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonB" Text="B" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonC" Text="C" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonD" Text="D" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonE" Text="E" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonF" Text="F" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonG" Text="G" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonH" Text="H" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonI" Text="I" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonJ" Text="J" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonK" Text="K" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonL" Text="L" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonM" Text="M" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonN" Text="N" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonO" Text="O" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonP" Text="P" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonQ" Text="Q" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonR" Text="R" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonS" Text="S" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonT" Text="T" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonU" Text="U" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonV" Text="V" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonW" Text="W" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonX" Text="X" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonY" Text="Y" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                    <Button x:Name="ButtonZ" Text="Z" Style="{DynamicResource LetterButtonStyle}" Clicked="LrClicked"/>
                </FlexLayout>
            </ScrollView>

            <!-- Restart and Help Buttons -->
            <StackLayout Grid.Row="4" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
                <Button TranslationY="200" WidthRequest="120" Text="Restart" Command="{Binding RestartCommand}" BackgroundColor="#FF9800" TextColor="White" FontAttributes="Bold" CornerRadius="20"/>
                <Button TranslationY="200" WidthRequest="120" Text="Help" Clicked="Help_Clicked" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="20"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
